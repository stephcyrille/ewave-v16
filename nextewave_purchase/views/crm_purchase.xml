<odoo>
  <data>
    <!-- Override CRM Form view -->
    <record id="nextewave_purchase_crm_form_view" model="ir.ui.view">
      <field name="name">Pipe line</field>
      <field name="model">crm.lead</field>
      <field name="inherit_id" ref="nextewave_crm.nextewave_crm_lead_form_view"/>
      <field name="arch" type="xml">
        <!--    Customs Action    -->
        <button name="action_set_won_rainbowman" position="before">
          <button
              string="Create PO"
              name="action_goto_purchase_order_form"
              type="object"
              class="oe_highlight"
              attrs="
                {'invisible':
                    [('state',
                        'in',
                      ['draft', 'new' , 'qualified', 'not_qualified', 'po_created', 'customer_so_created', 'order_paid',
                      'lost', 'won', 'canceled', 'close']
                    )]
                }"
          />
        </button>

        <field name="tag_ids" position="after">
          <field name="vendor_id" />
        </field>

        <button name="action_schedule_meeting" position="before">
            <button class="oe_stat_button" type="object"
                name="action_view_purchase_order" icon="fa-money" attrs="{'invisible': [('vendor_order_count', '=', 0)]}">
                <field name="vendor_order_count" widget="statinfo" string="Vendor quotation"/>
            </button>
        </button>
      </field>
  </record>
  </data>
</odoo>