<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="success-stories" model="website.page">
     <field name="name">Success Stories</field>
     <field name="website_published">True</field>
     <field name="url">/success-stories</field>
     <field name="type">qweb</field>
     <field name="key">next.success_stories</field>
     <field name="arch" type="xml">
       <t t-call="website.layout">
         <xpath expr="//div[@id='wrap']" position="inside">
          <div class="bg-slate-50">
            <!-- Section header -->
            <div class="bg-cover bg-center bg-no-repeat head" style="background-image: url(next_website/static/src/img/contact.jpg);">
              <div
                class=" w-full h-full bg-black/50 backdrop-blur-sm p-8 flex flex-col gap-4 justify-center items-center">
                <h2
                  class="block my-2 font-dosis text-4xl text-center lg:text-5xl leading-[1.3] tracking-normal text-white antialiased">
                  Success Story
                </h2>

                <div
                  class="block font-open-sans text-base font-medium md:max-w-2xl text-center leading-relaxed text-gray-300 antialiased">
                  Lorem, ipsum dolor sit amet consectetur adipisicing elit. Praesentium eum laboriosam explicabo!
                  Exercitationem, nam consequatur!
                </div>
              </div>
            </div>

            <div class=" w-full h-full flex justify-center my-8">
              <div class="w-full max-w-[90rem] px-8">
                <div class="p-4 bg-red-200 text-sm text-red-700 rounded-md">
                  <i class="ri-close-line" /> No articles published at the moment.
                </div>
              </div>
            </div>
          </div>
         </xpath>
       </t>
     </field>
    </record>
  </data>
</odoo>
