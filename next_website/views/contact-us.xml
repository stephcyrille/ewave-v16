<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="contact-us" model="website.page">
     <field name="name">Contact us</field>
     <field name="website_published">True</field>
     <field name="url">/contact-us</field>
     <field name="type">qweb</field>
     <field name="key">next.contact_us</field>
     <field name="arch" type="xml">
       <t t-call="website.layout">
         <xpath expr="//div[@id='wrap']" position="inside">
          <div class="bg-slate-50">
            <div class="bg-cover bg-center bg-no-repeat head" style="background-image: url(/next_website/static/src/img/contact.jpg);">
              <div
                class=" w-full h-full bg-black/50 backdrop-blur-sm p-8 flex flex-col gap-4 justify-center items-center">
                <h2
                  class="block my-2 font-dosis text-4xl text-center lg:text-5xl leading-[1.3] tracking-normal text-white antialiased">
                  Contact
                </h2>

                <div
                  class="block font-open-sans text-base font-medium md:max-w-2xl text-center leading-relaxed text-gray-300 antialiased">
                  Contact us about anything related to our company or services.
                  We'll do our best to get back to you as soon as possible.
                </div>
              </div>
            </div>

            <div class="flex w-full justify-center mb-4">
              <div class="w-full max-w-[90rem] flex max-lg:flex-col gap-y-10 gap-x-20 p-8">
                <div class="lg:order-last w-full lg:w-1/3">
                  <div class="w-full phone:w-max my-8 mt-2">
                    <h1 class="text-3xl font-dosis font-medium text-green-steel">
                      NexteWave Sarl
                    </h1>

                    <hr class="border-2 rounded-lg mt-4 border-green-steel w-[20%]" />
                  </div>

                  <div
                    class="text-neutral-600 font-open-sans flex flex-wrap justify-center md:justify-around lg:justify-start gap-y-10 gap-x-6 w-full">
                    <div
                      class="flex flex-col items-center justify-center lg:border-l-2 rounded max-lg:bg-white max-lg:shadow-md px-2 w-full max-w-[20rem] max-lg:min-h-[10rem]">
                      <p class=" text-4xl text-green-steel leading-none mb-4">
                        <i class="fa-solid fa-location-dot" />
                      </p>
                      <ul class="text-sm text-center flex flex-col gap-y-1">
                        <li class="">Douala, <span class="italic">Route cit√© CICAM</span>
                        </li>
                        <li class="">Canada, <span class="italic">Lorem, ipsum dolor.</span></li>
                      </ul>
                    </div>
                    <div
                      class="flex flex-col items-center justify-center lg:border-l-2 rounded max-lg:bg-white max-lg:shadow-md px-2 w-full max-w-[20rem] max-lg:min-h-[10rem]">
                      <p class="text-4xl text-green-steel leading-none mb-4">
                        <i class="ri-phone-fill" />
                      </p>
                      <ul class="text-sm text-center flex flex-col gap-y-1">
                        <li class=""><a href="tel:+1650-555-0111" target="_blank">+1 (650) 555-0111</a></li>
                        <li class=""><a href="tel:+1650-555-0111" target="_blank">+237 650 555 111</a></li>
                      </ul>
                    </div>
                    <div
                      class="flex flex-col items-center justify-center lg:border-l-2 rounded max-lg:bg-white max-lg:shadow-md px-2 w-full max-w-[20rem] max-lg:min-h-[10rem]">
                      <p class="text-4xl text-green-steel leading-none mb-4">
                        <i class="fa-solid fa-envelope" />
                      </p>
                      <a href="mailto:hello@mycompany.com" target="_blank"
                        class="text-sm text-center gap-y-1 ">hello@mycompany.com</a>
                    </div>
                    <div
                      class="flex flex-col items-center justify-center lg:border-l-2 rounded max-lg:bg-white max-lg:shadow-md px-2 w-full max-w-[20rem] max-lg:min-h-[10rem]">
                      <p class="text-4xl text-green-steel leading-none mb-4">
                        <i class="fa-solid fa-business-time" />
                      </p>
                      <ul class="text-sm text-center flex flex-col gap-y-1">
                        <li class="">Monday - Friday: 8H - 17H</li>
                        <li class="">Saturday: 8H - 12H</li>
                      </ul>
                    </div>
                  </div>
                </div>

                <form action="" class="w-full lg:w-2/3 max-w-[70rem] font-open-sans">
                  <div class="w-full phone:w-max my-8 lg:mt-2">
                    <h2 class="text-3xl font-dosis font-medium text-blue-green">
                      Apply this form
                    </h2>
                    <hr class="border-2 rounded-lg mt-4 border-blue-green w-[20%]" />
                  </div>
                  <div>
                    <div class="flex flex-wrap -mx-3 mb-4">
                      <div class="w-full md:w-1/2 px-3 mb-4 md:mb-0">
                        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                          for="grid-name">
                          Full name <i class="text-red-600">*</i>
                        </label>
                        <input
                          class="appearance-none block w-full bg-white text-gray-700 text-sm border border-gray-300 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-blue-green"
                          id="grid-name" type="text" placeholder="Your name and surname" required="True" />
                      </div>
                      <div class="w-full md:w-1/2 px-3">
                        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                          for="grid-company-name">
                          Company name
                        </label>
                        <input
                          class="appearance-none block w-full bg-white text-gray-700 text-sm border border-gray-300 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-blue-green"
                          id="grid-company-name" type="text" placeholder="Your compagny" />
                      </div>
                    </div>
                    <div class="flex flex-wrap -mx-3 mb-4">
                      <div class="w-full md:w-1/2 px-3 mb-4 md:mb-0">
                        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                          for="grid-phone">
                          Phone number
                        </label>
                        <input
                          class="appearance-none block w-full bg-white text-gray-700 text-sm border border-gray-300 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-blue-green"
                          id="grid-phone" type="tel" placeholder="Your phone" />
                      </div>
                      <div class="w-full md:w-1/2 px-3">
                        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                          for="grid-email">
                          Email <i class="text-red-600">*</i>
                        </label>
                        <input
                          class="appearance-none block w-full bg-white text-gray-700 text-sm border border-gray-300 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-blue-green"
                          id="grid-email" type="email" placeholder="Your email" required="True" />
                      </div>
                    </div>
                    <div class="flex flex-wrap -mx-3 mb-4">
                      <div class="w-full px-3 mb-4 md:mb-0">
                        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                          for="grid-address">
                          Subject <i class="text-red-600">*</i>
                        </label>
                        <input
                          class="appearance-none block w-full bg-white text-gray-700 text-sm border border-gray-300 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-blue-green"
                          id="grid-address" type="text" placeholder="Subject of message" required="True" />
                      </div>
                    </div>

                    <div class="flex flex-wrap -mx-3 mb-4">
                      <div class="w-full px-3">
                        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                          for="grid-more-information">
                          Message <i class="text-red-600">*</i>
                        </label>
                        <textarea id="grid-more-information" name="about" rows="4"
                          required="True"
                          placeholder="Any question or subjection"
                          class="block w-full rounded border border-gray-300 text-gray-700 text-sm placeholder:text-gray-400 leading-normal py-3 px-4 mb-3 focus:bg-white focus:border-blue-green" />
                      </div>
                    </div>
                  </div>

                  <button
                    class="rounded-md h-max font-dosis border py-2 px-10 lg:px-14 font-light text-sm leading-normal text-white shadow-md transition-all bg-blue-green hover:bg-green-600 border-slate-200 ease-in-out duration-200 active:opacity-[0.85] disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none inline-block"
                    type="submit">
                    <span>Submit</span>
                  </button>
                </form>
              </div>
            </div>

            <div class="google-map">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1989.9302667027432!2d9.736189194949484!3d4.0488608593103415!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x10610d7655586d9b%3A0xa2badbab64f6cb75!2s2PXP%2BHW3%2C%20Douala%2C%20Cameroun!5e0!3m2!1sfr!2sca!4v1699027495355!5m2!1sfr!2sca"
                    width="600" height="500" style="border:0;" allowfullscreen="" loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade" />
            </div>
          </div>
         </xpath>
       </t>
     </field>
    </record>
  </data>
</odoo>
