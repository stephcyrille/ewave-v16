<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
      <template id="report_grouping_package">
        <t t-call="web.html_container">
          <t t-call="web.external_layout">
            <div class="page">
              <t t-foreach="docs" t-as="o">
                <div class="col-md-6 col-xs-4" style="padding:0;">
                  <table class="table table-condensed" style="border-bottom: 0px solid white !important;width: 3in;">
                    <tr>
                        <td style="border: 2px solid black;text-align: center; width: 100%">
                            [<strong t-field="o.ref"/>]
                        </td>
                    </tr>
                    <tr style="width: 1in;">
                        <td style="border: 2px solid black;text-align: center; vertical-align: middle;" class="">
                            <img class="barcode" t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1&amp;quiet=0' % ('Code128', o.barcode, 400, 100)" alt="Barcode"/>
                            <br />
                            <span t-field="o.barcode"/>
                        </td>
                    </tr>
                  </table>
                </div>
                <div class="col-md-6 col-xs-4" style="padding:0;">
                  <table class="table table-condensed" style="border-bottom: 0px solid white !important;width: 3in;">
                    <tr>
                        <td style="border: 2px solid black;text-align: center; width: 100%">
                            [<strong t-field="o.ref"/>]
                        </td>
                    </tr>
                    <tr style="width: 1in;">
                        <td style="border: 2px solid black;text-align: center; vertical-align: middle;" class="">
                            <img class="barcode" t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1&amp;quiet=0' % ('Code128', o.barcode, 400, 100)" alt="Barcode"/>
                            <br />
                            <span t-field="o.barcode"/>
                        </td>
                    </tr>
                  </table>
                </div>
              </t>
            </div>
          </t>
        </t>
      </template>
    </data>
</odoo>