
<odoo>
  <record id="menuWePackAndShip4You" model="website.menu">
    <field name="name">We Pack &amp; Ship 4 You</field>
    <field name="url">/pack-and-ship-4-you</field>
    <field name="parent_id" ref="website.main_menu"/>
    <field name="sequence" type="int">42</field>
  </record>

  <template id="pack_and_ship_for_you_template" name="We pack and Ship 4 You">
    <t name="We Pack and Ship 4 You" t-name="website.srcandbuy">
      <t t-call="website.layout">
        <t t-set="pageName" t-value="'buy4you'"/>
          <style>
            .close_product_tab:hover{
              padding: 2px;
              border: 1px solid red;
              border-radius: 50px;
              transition: ease-in 0.4s;
            }
            .close_product_tab{
              padding: 2px;
              border: 1px solid white;
              border-radius: 50px;
              transition: ease-out 0.4s;
              opacity: 0;
            }
            .nav-link:hover > .close_product_tab{
              opacity: 1;
            }
          </style>
          <div class="container" style="padding: 40px 0">
            <h1 class="text-center display-4" style="margin-bottom: 25px; width: 100%">We Pack and Shio 4 you application</h1>

            <t t-if="form_alert">
                <div>
                    <div t-attf-class="alert alert-dismissible alert-#{form_alert['color']} text-center fade show mb-0" style="z-index: 10;">
                        <strong><span t-esc="form_alert['title']" /></strong>
                        <span t-esc="form_alert['message_header']" /> <br/>
                        <span t-esc="form_alert['message_body']" />
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"/>
                    </div>
                </div>
            </t>

            <div class="row" style="margin: 0px; padding: 40px 0; width: 100%">
              <div class="offset-md-1 col-md-10">
                <form action="" method="post">
                  <div class="row mb-5 pb-4" style="border-bottom: 1px solid lightgray;">
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group row mt-3">
                          <label for="from_place" class="col-sm-4 col-form-label" >Origin <sup>*</sup></label>
                          <div class="col-sm-8">
                            <input class="form-control" type='text' id="from_place" name="from_place" placeholder="From place" required="1"/>
                          </div>
                        </div>
                        <div class="form-group row mt-3">
                          <label for="to_place" class="col-sm-4 col-form-label" >Destination <sup>*</sup></label>
                          <div class="col-sm-8">
                            <input class="form-control" type='text' id="to_place" name="to_place" placeholder="To place" required="1"/>
                          </div>
                        </div>
                        <div class="form-group row mt-3">
                          <label for="start_date" class="col-sm-4 col-form-label" >Departure <sup>*</sup></label>
                          <div class="col-sm-8">
                            <input class="form-control" type='date' id="start_date" name="start_date" placeholder="Estimated departure date" required="1"/>
                          </div>
                        </div>
                        <div class="form-group row mt-3">
                          <label for="end_date" class="col-sm-4 col-form-label" >Arrival <sup>*</sup></label>
                          <div class="col-sm-8">
                            <input class="form-control" type='date' id="end_date" name="end_date" placeholder="Estimated arrival date" />
                          </div>
                        </div>
                      </div>

                      <div class="col-md-6">
                        <div class="form-group row mt-3">
                          <label for="company_name" class="col-sm-4 col-form-label" >Company <sup>*</sup></label>
                          <div class="col-sm-8">
                            <input class="form-control" type='text' id="company_name" name="company_name" placeholder="Company name" required="1"/>
                          </div>
                        </div>
                        <div class="form-group row mt-3">
                          <label for="name" class="col-sm-4 col-form-label" >Full name <sup>*</sup></label>
                          <div class="col-sm-8">
                            <input class="form-control" type='text' id="name" name="name" placeholder="Name and surname" required="1"/>
                          </div>
                        </div>
                        <div class="form-group row mt-3">
                          <label for="phone_number" class="col-sm-4 col-form-label" >Phone <sup>*</sup></label>
                          <div class="col-sm-8">
                            <input class="form-control" type="text" id="phone_number" name="phone_number" placeholder="Phone number" required="1"/>
                          </div>
                        </div>
                        <div class="form-group row mt-3">
                          <label for="email" class="col-sm-4 col-form-label" >Email <sup>*</sup></label>
                          <div class="col-sm-8">
                            <input class="form-control" type="email" id="email" name="email" placeholder="Email" required="1"/>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>


                  <button class="btn btn-secondary" id="addProductTrigger" style="margin-bottom: 15px">Add item</button>

                  <!-- Nav tabs -->
                  <nav>
                    <div class="nav nav-tabs" role="tablist" id="navitemTab">
                      <button class="nav-link active" id="nav_product_1_tab" data-bs-toggle="tab"
                              data-bs-target="#nav_product_1" type="button" role="tab"
                              aria-controls="nav_product_1" aria-selected="true">
                        Product 1
                      </button>
                    </div>
                  </nav>

                  <!-- Tab panes -->
                  <div class="tab-content" id="myTabContent">
                    <div id="nav_product_1" class="tab-pane fade show active"
                         aria-labelledby="nav_product_1_tab" role="tabpanel"><br />
                      <div class="form-group row mt-3">
                        <label for="product_name_1" class="col-sm-3 col-form-label" >Product</label>
                        <div class="col-sm-9">
                          <input class="form-control" type="text" id="product_name_1"
                                    name="product_name_1" placeholder="Product name" required="1"/>
                        </div>
                      </div>
                      <div class="form-group row mt-3">
                        <label for="product_material_1" class="col-sm-3 col-form-label" >Material</label>
                        <div class="col-sm-9">
                          <select class="form-control" id="product_material_1" name="product_material_1"
                                  placeholder="Product material">
                            <option value="other">Other</option>
                            <option value="electronic">Electronic</option>
                            <option value="textile">Textile</option>
                            <option value="cosmetic">Cosmetic</option>
                            <option value="shoes">Shoes</option>
                          </select>
                        </div>
                      </div>
                      <div class="form-group row mt-3">
                        <label for="quantity_1" class="col-sm-3 col-form-label" >Quantity <sup>*</sup></label>
                        <div class="col-sm-9">
                          <input class="form-control" value="1" type="number" id="quantity_1"
                                 name="quantity_1" min="1" placeholder="Quantity needed" required="1"/>
                        </div>
                      </div>
                      <div class="form-group row mt-3">
                          <label for="product_weight_1" class="col-sm-3 col-form-label" >Weight (Kg) <sup>*</sup></label>
                          <div class="col-sm-9">
                            <input class="form-control" value="1.0" type="number" step="0.01"
                                   id="product_weight_1" name="product_weight_1" min="1"
                                   placeholder="Weight in Kg" required="1" />
                          </div>
                      </div>
                      <div class="form-group row mt-3">
                          <label for="product_capacity_1" class="col-sm-3 col-form-label" >Capicity (m3) <sup>*</sup></label>
                          <div class="col-sm-9">
                            <input class="form-control" value="1.0" type="number" step="0.01"
                                   id="product_capacity_1" name="product_capacity_1" min="1"
                                   placeholder="Capacity in m3" required="1" />
                          </div>
                      </div>
                      <div class="form-group row mt-3">
                          <label for="product_price_1" class="col-sm-3 col-form-label" >Estimated price <sup>*</sup></label>
                          <div class="col-sm-9">
                            <input class="form-control" value="1.0" type="number" step="0.01"
                                   id="product_price_1" name="product_price_1" min="1"
                                   placeholder="Estimated price (XAF)" required="1" />
                          </div>
                      </div>
                    </div>
                  </div>



                  <div class="multipleProduct" id="multipleProductWrapper" style="margin: 0; width: 100%" />

                  <input type="hidden" name="product_counter" id="product_counter" value="1"/>
                  <div class="submit_button my-3">
                    <input type="submit" class="btn btn-primary btn-md" value="Submit"/>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <script type="text/javascript" src="/nextewave_web_template/static/js/jquery-111.js"/>
          <script src="nextewave_web_template/static/js/pckandship4you.js"/>
      </t>
    </t>
  </template>
</odoo>