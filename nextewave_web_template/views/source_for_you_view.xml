
<odoo>
  <record id="menuBuy4You" model="website.menu">
    <field name="name">We Sourcing 4 You</field>
    <field name="url">/sourcing-4-you</field>
    <field name="parent_id" ref="website.main_menu"/><field name="sequence" type="int">40</field>
  </record>

  <template id="source_for_you_form" name="Source and Buy 4 You">
    <t name="We Sourcing 4 You" t-name="website.srcandbuy">
      <t t-call="website.layout">
        <t t-set="pageName" t-value="'buy4you'"/>
          <style>
            .close_product_tab:hover{
              padding: 2px;
              border: 1px solid red;
              border-radius: 50px;
              transition: ease-in 0.4s;
            }
            .close_product_tab{
              padding: 2px;
              border: 1px solid white;
              border-radius: 50px;
              transition: ease-out 0.4s;
              opacity: 0;
            }
            .nav-link:hover > .close_product_tab{
              opacity: 1;
            }
          </style>
          <div class="container" style="padding: 40px 0">
            <h1 class="text-center display-4" style="margin-bottom: 25px; width: 100%">We sourcing 4 you application</h1>

            <t t-if="form_alert">
                <div>
                    <div t-attf-class="alert alert-dismissible alert-#{form_alert['color']} text-center fade show mb-0" style="z-index: 10;">
                        <strong><span t-esc="form_alert['title']" /></strong>
                        <span t-esc="form_alert['message_header']" /> <br/>
                        <span t-esc="form_alert['message_body']" />
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"/>
                    </div>
                </div>
            </t>

            <div class="row" style="margin: 0px; padding: 40px 0; width: 100%">
              <div class="offset-md-2 col-md-8">
                <form action="/sourcing-4-you/submit" method="post" enctype="multipart/form-data">
                  <button class="btn btn-secondary" id="addProductTrigger" style="margin-bottom: 15px">Add product</button>

                  <!-- Nav tabs -->
                  <nav>
                    <div class="nav nav-tabs" role="tablist" id="navitemTab">
                      <button class="nav-link active" id="nav_product_1_tab" data-bs-toggle="tab"
                              data-bs-target="#nav_product_1" type="button" role="tab"
                              aria-controls="nav_product_1" aria-selected="true">
                        Product 1
                      </button>
                    </div>
                  </nav>

                  <!-- Tab panes -->
                  <div class="tab-content" style="border-bottom: 1px solid lightgray; margin-bottom: 30px;" id="myTabContent">
                    <div id="nav_product_1" class="tab-pane fade show active"
                         aria-labelledby="nav_product_1_tab" role="tabpanel"><br />
                      <div class="form-group row mt-3">
                        <label for="product_name_1" class="col-sm-3 col-form-label" >Product</label>
                        <div class="col-sm-9">
                          <input class="form-control" type="text" id="product_name_1" name="product_name_1" placeholder="Product name" required="0"/>
                        </div>
                      </div>
                      <div class="form-group row mt-3">
                        <label for="product_picture_1" class="col-sm-3 col-form-label">Picture*</label>
                        <div class="col-sm-9">
                          <input type="file" class="form-control-file" name="product_picture_1"
                                 accept="image/jpeg,image/gif,image/png" data-show-upload="true"
                                 data-show-caption="true" lass="file" data-show-preview="true"
                                 id="product_picture_1" required="1"
                          />
                        </div>
                      </div>
                      <div class="form-group row mt-3">
                        <label for="quantity_1" class="col-sm-3 col-form-label" >Quantity <sup>*</sup></label>
                        <div class="col-sm-9">
                          <input class="form-control" value="1" type="number" id="quantity_1" name="quantity_1" min="1" placeholder="Quantity needed" required="1"/>
                        </div>
                      </div>
                      <div class="form-group row my-3">
                        <label for="product_description_1" class="col-sm-3 col-form-label" >Description <sup>*</sup></label>
                        <div class="col-sm-9">
                          <textarea class="form-control" type="text" id="product_description_1" name="product_description_1" placeholder="More about our product description " required="1"/>
                        </div>
                      </div>
                    </div>
                  </div>



                  <div class="multipleProduct" id="multipleProductWrapper" style="margin: 0; width: 100%">

                  </div>
                  <div class="form-group row mt-3">
                    <label for="usage" class="col-sm-3 col-form-label" >Usage</label>
                    <div class="col-sm-9">
                      <div class="row" style="margin: 0; width: 100%">
                        <div class="form-check form-check-inline col-sm-4">
                          <input class="form-check-input" name="personal_use" type="checkbox" id="personal_use" value="Personal use"/>
                          <label class="form-check-label" for="personal_use">Personal use</label>
                        </div>
                        <div class="form-check form-check-inline col-sm-4">
                          <input class="form-check-input" name="commercial_use" type="checkbox" id="commercial_use" value="Commercial use"/>
                          <label class="form-check-label" for="commercial_use">Commercial use</label>
                        </div>
                        <div class="form-check form-check-inline col-sm-4">
                          <input class="form-check-input" name="buy_and_sel" type="checkbox" id="buy_and_sell" value="Buy and sell"/>
                          <label class="form-check-label" for="buy_and_sell">Buy and sell</label>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="form-group row mt-3">
                    <label for="more_information" class="col-sm-3 col-form-label" >Additional informations</label>
                    <div class="col-sm-9">
                      <textarea nae="more_information" name="more_information" id="more_information" class="form-control" placeholder="Additional information here" />
                    </div>
                  </div>
                  <div class="form-group row mt-3">
                    <label for="company_name" class="col-sm-3 col-form-label" >Company name <sup>*</sup></label>
                    <div class="col-sm-9">
                      <input class="form-control" type='text' id="company_name" name="company_name" placeholder="Company name" required="1"/>
                    </div>
                  </div>
                  <div class="form-group row mt-3">
                    <label for="name" class="col-sm-3 col-form-label" >Name and surname <sup>*</sup></label>
                    <div class="col-sm-9">
                      <input class="form-control" type='text' id="name" name="name" placeholder="Name and surname" required="1"/>
                    </div>
                  </div>
                  <div class="form-group row mt-3">
                    <label for="phone_number" class="col-sm-3 col-form-label" >Phone number <sup>*</sup></label>
                    <div class="col-sm-9">
                      <input class="form-control" type="text" id="phone_number" name="phone_number" placeholder="Phone number" required="1"/>
                    </div>
                  </div>
                  <div class="form-group row mt-3">
                    <label for="email" class="col-sm-3 col-form-label" >Email <sup>*</sup></label>
                    <div class="col-sm-9">
                      <input class="form-control" type="email" id="email" name="email" placeholder="Adresse mail" required="1"/>
                    </div>
                  </div>

                  <input type="hidden" name="product_counter" id="product_counter" value="1"/>
                  <div class="submit_button my-3">
                    <input type="submit" class="btn btn-primary btn-md" value="Submit"/>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <script type="text/javascript" src="/nextewave_web_template/static/js/jquery-111.js"/>
          <script src="nextewave_web_template/static/js/sourcing.js"></script>
      </t>
    </t>
  </template>
</odoo>